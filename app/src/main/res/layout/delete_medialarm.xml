                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_toRightOf="@id/item_image"
                                    android:text="아침"
                                    android:textSize="23sp" />

