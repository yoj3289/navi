<!-- res/layout/dialog_input.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/popup_bg2"
    >


    <TextView
        android:id="@+id/title"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="데이터 삭제"
        android:textSize="25sp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/custom_card_background"
        android:backgroundTint="#DF0101"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/howTo"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:text="1. 모든 체중데이터가 삭제돼요.
        \n2. 삭제한 후에는 복구할 수 없어요.
        \n3. 문구를 따라 쓰고 버튼을 누르세요."
        android:textSize="20sp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:lineSpacingExtra="5dp"
        android:background="@drawable/border_background_with_line"/>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/howTo"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="10dp"
        android:id="@+id/inputKg"
        android:layout_marginBottom="10dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:id="@+id/editKgInput"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:id="@+id/line1"
        android:layout_below="@id/inputKg"
        android:background="@color/black"
        ></View>
    <View
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:id="@+id/line2"
        android:layout_below="@id/line1"
        android:layout_centerHorizontal="true"
        android:background="@color/black"></View>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputKg"
        android:weightSum="100"
        >
        <Button
            android:id="@+id/btnNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/editKgInput"
            android:background="@drawable/popup_btn_bg"
            android:text="취소"
            android:textSize="20sp"
            android:textColor="@android:color/holo_red_light"
            android:layout_weight="50" />

        <Button
            android:id="@+id/btnOk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/editKgInput"
            android:layout_toRightOf="@id/btnNo"
            android:background="@drawable/popup_btn_bg"
            android:text="삭제"
            android:textSize="20sp"
            android:textColor="@android:color/holo_blue_light"
            android:layout_weight="50" />
    </LinearLayout>

</RelativeLayout>
