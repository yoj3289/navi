                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/custom_card_background"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp"
                app:contentPadding="4dp"
                app:strokeWidth="3dp"
                app:strokeColor="@color/black">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="건강 카드"
                    android:textSize="27sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="35dp"
                    android:textAlignment="center"
                    android:background="@drawable/custom_card_background"
                    android:textColor="@color/white"
                    >
                </TextView>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:id="@+id/item_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/boy_test" />

                    <ImageView
                        android:id="@+id/item_logo"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_below="@id/item_image"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_card_logo" />


                    <TextView
                        android:id="@+id/cardName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="50dp"
                        android:layout_toEndOf="@+id/item_image"
                        android:layout_toRightOf="@id/item_image"
                        android:text="홍길동"
                        android:textSize="35sp" />

                    <TextView
                        android:id="@+id/cardBirth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardName"
                        android:layout_toEndOf="@+id/item_image"
                        android:layout_toRightOf="@+id/item_image"
                        android:text="생년월일: 0000.00.00"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/cardSex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardBirth"
                        android:layout_toEndOf="@+id/item_image"
                        android:layout_toRightOf="@+id/item_image"
                        android:text="성별: 남"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/cardBlood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardSex"
                        android:layout_toEndOf="@+id/item_image"
                        android:layout_toRightOf="@+id/item_image"
                        android:text="혈액형: B형"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/cardBmi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardBlood"
                        android:layout_toEndOf="@+id/item_image"
                        android:layout_toRightOf="@+id/item_image"
                        android:text="BMI: 정상"
                        android:textSize="20sp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


