<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/weight_Management"
        tools:context=".HomeFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/custom_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mainColor"
            app:title="체중관리"
            app:titleTextColor="@color/white"
            ></androidx.appcompat.widget.Toolbar>
        <TextView
            android:id="@+id/showName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/custom_toolbar"
            android:layout_marginLeft="10dp"
            android:text="홍길동님은 현재 "
            android:textSize="20sp"
            >
        </TextView>
        <TextView
            android:id="@+id/showBMI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/custom_toolbar"
            android:layout_toRightOf="@id/showName"
            android:text="정상 체중 "
            android:textSize="20sp"
            >
        </TextView>

        <TextView
            android:id="@+id/showEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/custom_toolbar"
            android:layout_toRightOf="@id/showBMI"
            android:text="이에요!"
            android:textSize="20sp"
            >
        </TextView>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_width="500dp"
            android:layout_height="250dp"
            android:background="@drawable/border_background"
            android:layout_below="@id/showEnd"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/alarmRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lineChart"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="5dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:clipToPadding="false"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/alarmRecyclerView"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
            <com.google.android.material.card.MaterialCardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:layout_marginRight="25dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="12dp"
                card_view:cardElevation="10dp"
                app:strokeWidth="3dp"
                app:strokeColor="@color/black">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    >

                    <ImageView
                        android:id="@+id/item_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/detail" />

                    <TextView
                        android:id="@+id/cardName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_below="@id/item_image"
                        android:text="상세검색"
                        android:textSize="25sp" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="12dp"
                card_view:cardElevation="10dp"
                app:strokeWidth="3dp"
                app:strokeColor="@color/black"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    >

                    <ImageView
                        android:id="@+id/item_image2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/scale" />

                    <TextView
                        android:id="@+id/cardName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_below="@id/item_image2"
                        android:text="체중입력"
                        android:textSize="25sp" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>