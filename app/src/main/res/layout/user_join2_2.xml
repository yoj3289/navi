<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/userPage"
        tools:context=".HomeFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/custom_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mainColor"
            app:title="사용자 정보 수정"
            app:titleTextColor="@color/white"
            >
        </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/custom_toolbar"
            android:id="@+id/userIdCard">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/secondView"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="30dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:id="@+id/namePage"
                    android:text="이름"
                    android:textSize="25sp"
                    >
                </TextView>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/namePage"
                    app:boxBackgroundMode="filled"
                    android:id="@+id/getName">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/inputName"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:id="@+id/birthPage"
                    android:text="생년월일"
                    android:textSize="25sp"
                    android:layout_below="@+id/getName"
                    >
                </TextView>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/birthPage"
                    app:boxBackgroundMode="filled"
                    android:id="@+id/getBirth">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/inputBirth"
                        android:clickable="true"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:id="@+id/heightPage"
                    android:text="키/체중"
                    android:textSize="25sp"
                    android:layout_below="@id/getBirth"
                    >
                </TextView>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/heightPage"
                    app:boxBackgroundMode="filled"
                    android:id="@+id/getHeight">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/inputHeight"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/getHeight"
                    android:layout_marginTop="10dp"
                    app:boxBackgroundMode="filled"
                    android:id="@+id/getWeight">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/inputWeight"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/bloodPage"
                    android:text="성별/혈액형"
                    android:textSize="25sp"
                    android:layout_below="@id/getWeight"
                    >
                </TextView>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_toRightOf="@id/bloodPage"
                    android:layout_marginLeft="10dp"
                    android:layout_above="@id/getSex"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/questionmark"
                    ></ImageView>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bloodPage"
                    android:id="@+id/getSex">

                    <TextView
                        android:id="@+id/categoryTextViews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="카테고리"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginLeft="16dp"
                        app:layout_constraintEnd_toStartOf="@id/categorySpinners"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <Spinner
                        android:entries="@array/성별"
                        android:id="@+id/categorySpinners"
                        android:layout_width="160dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@+id/categoryTextViews" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bloodPage"
                    android:layout_toRightOf="@id/getSex"
                    android:id="@+id/getBlood"
                    android:layout_marginStart="20dp">
                    <!--<com.google.android.material.textfield.TextInputEditText
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/inputBlood"
                        android:hint="혈액형을 입력하세요" />-->
                    <TextView
                        android:id="@+id/categoryTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="카테고리"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginLeft="16dp"
                        app:layout_constraintEnd_toStartOf="@id/categorySpinner"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <Spinner
                        android:entries="@array/혈액형"
                        android:id="@+id/categorySpinner"
                        android:layout_width="160dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@+id/categoryTextView" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/explain"
                    android:text="이름은 수정할 수 없어요\n체중은 체중관리에서 변경해주세요"
                    android:layout_below="@id/getBlood"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:textColor="#BDBDBD"></TextView>

                <Button
                    android:id="@+id/submit"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/explain"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:text="저장" />
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>
</ScrollView>
