        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/editDateInput"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/howTo"
        android:hint="날짜를 입력하세요"
        android:paddingTop="10dp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/editTextInput"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editDateInput"
        android:hint="             숫자와 ·만 입력하세요!       "
        android:paddingTop="10dp"
        android:layout_marginTop="10dp"/>-->

    <TextView
        android:id="@+id/dateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/howTo"
        android:text="날짜"
        android:textSize="27sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="9dp"
        />

    <TextView
        android:id="@+id/kgTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateTitle"
        android:text="체중"
        android:textSize="27sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/howTo"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/dateTitle"
        android:id="@+id/inputDate">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:id="@+id/editDateInput"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/inputDate"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/kgTitle"
        android:id="@+id/inputKg"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:id="@+id/editKgInput"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:id="@+id/line1"
        android:layout_below="@id/inputKg"
        android:background="@color/black"
        ></View>
    <View
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:id="@+id/line2"
        android:layout_below="@id/line1"
        android:layout_centerHorizontal="true"
        android:background="@color/black"></View>

<LinearLayout
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:layout_below="@id/inputKg"
    android:weightSum="100"
>
    <Button
        android:id="@+id/btnNo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editKgInput"
        android:background="@drawable/popup_btn_bg"
        android:text="취소"
        android:textSize="20sp"
        android:textColor="@android:color/holo_red_light"
        android:layout_weight="50" />

    <Button
        android:id="@+id/btnOk"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editKgInput"
        android:layout_toRightOf="@id/btnNo"
        android:background="@drawable/popup_btn_bg"
        android:text="입력"
        android:textSize="20sp"
        android:textColor="@android:color/holo_blue_light"
        android:layout_weight="50" />
</LinearLayout>

</RelativeLayout>
