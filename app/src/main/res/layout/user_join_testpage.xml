<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:id="@+id/userPage" tools:context=".HomeFragment">
    <androidx.appcompat.widget.Toolbar android:id="@+id/custom_toolbar" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@color/mainColor" app:title="사용자 정보 입력" app:titleTextColor="@color/white" app:layout_constraintTop_toTopOf="parent"/>
    <ScrollView android:layout_width="0dp" android:layout_height="0dp" app:layout_constraintTop_toBottomOf="@id/custom_toolbar" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView android:id="@+id/card_view" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginStart="25dp" android:layout_marginTop="10dp" android:layout_marginEnd="25dp" android:background="@drawable/custom_card_background" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent" app:cardBackgroundColor="@color/white" app:cardCornerRadius="12dp" app:cardElevation="5dp" app:contentPadding="4dp" app:strokeColor="@color/black" app:strokeWidth="3dp">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:layout_marginBottom="35dp" android:background="@drawable/custom_card_background" android:text="건강 카드" android:textAlignment="center" android:textColor="@color/white" android:textSize="27sp"/>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginStart="10dp" android:layout_marginEnd="10dp" android:paddingTop="50dp">
                    <ImageView android:id="@+id/item_image" android:layout_width="100dp" android:layout_height="100dp" android:layout_alignParentStart="true" android:layout_alignParentTop="true" android:layout_alignParentEnd="true" android:layout_gravity="center_horizontal" android:layout_marginEnd="16dp" android:src="@drawable/boy_test"/>
                    <TextView android:id="@+id/cardName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_marginStart="30dp" android:layout_toEndOf="@+id/item_image" android:layout_toStartOf="@id/item_image" android:text="홍길동" android:textSize="35sp"/>
                    <TextView android:id="@+id/cardBirth" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/cardName" android:layout_toEndOf="@+id/item_image" android:layout_toStartOf="@id/item_image" android:text="생년월일: 0000.00.00" android:textSize="20sp"/>
                    <TextView android:id="@+id/cardSex" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/cardBirth" android:layout_toEndOf="@+id/item_image" android:layout_toStartOf="@id/item_image" android:text="성별: 남" android:textSize="20sp"/>
                    <TextView android:id="@+id/cardBlood" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/cardSex" android:layout_toEndOf="@+id/item_image" android:layout_toStartOf="@id/item_image" android:text="혈액형: B형" android:textSize="20sp"/>
                    <TextView android:id="@+id/cardBmi" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/cardBlood" android:layout_toEndOf="@+id/item_image" android:layout_toStartOf="@id/item_image" android:text="BMI: 정상" android:textSize="20sp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView android:id="@+id/namePage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="이름" android:textSize="25sp" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.153" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/card_view"/>
            <com.google.android.material.textfield.TextInputLayout android:id="@+id/getName" android:layout_width="300dp" android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/namePage">
                <com.google.android.material.textfield.TextInputEditText android:layout_width="300dp" android:layout_height="wrap_content" android:hint="이름을 입력하세요"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView android:id="@+id/birthPage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="생년월일" android:textSize="25sp" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.176" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/getName"/>
            <com.google.android.material.textfield.TextInputLayout android:id="@+id/getBirth" android:layout_width="300dp" android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/birthPage">
                <com.google.android.material.textfield.TextInputEditText android:layout_width="300dp" android:layout_height="wrap_content" android:hint="생년월일"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView android:id="@+id/sexPage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="성별" android:textSize="25sp" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.153" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/getBirth"/>
            <com.google.android.material.textfield.TextInputLayout android:id="@+id/getSex" android:layout_width="300dp" android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/sexPage">
                <com.google.android.material.textfield.TextInputEditText android:layout_width="300dp" android:layout_height="wrap_content" android:hint="성별"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView android:id="@+id/heightPage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="키" android:textSize="25sp" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.144" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/getSex"/>
            <com.google.android.material.textfield.TextInputLayout android:id="@+id/getHeight" android:layout_width="300dp" android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/heightPage">
                <com.google.android.material.textfield.TextInputEditText android:layout_width="300dp" android:layout_height="wrap_content" android:hint="키를 입력하세요"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView android:id="@+id/weightPage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="체중" android:textSize="25sp" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.153" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/getHeight"/>
            <com.google.android.material.textfield.TextInputLayout android:id="@+id/getWeight" android:layout_width="300dp" android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/weightPage">
                <com.google.android.material.textfield.TextInputEditText android:layout_width="300dp" android:layout_height="wrap_content" android:hint="체중을 입력하세요"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView android:id="@+id/bloodPage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="혈액형" android:textSize="25sp" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.164" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/getWeight"/>
            <com.google.android.material.textfield.TextInputLayout android:id="@+id/getBlood" android:layout_width="300dp" android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/bloodPage">
                <com.google.android.material.textfield.TextInputEditText android:layout_width="300dp" android:layout_height="wrap_content" android:hint="혈액형을 입력하세요"/>
            </com.google.android.material.textfield.TextInputLayout>
            <Button android:id="@+id/submit" android:layout_width="300dp" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="저장" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/getBlood"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>