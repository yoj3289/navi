<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/userPage"
        tools:context=".HomeFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/custom_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mainColor"
            app:title="사용자 정보 입력"
            app:titleTextColor="@color/white"
            >
        </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/custom_toolbar"
            android:id="@+id/userIdCard">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/custom_card_background"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp"
                app:contentPadding="4dp"
                app:strokeWidth="3dp"
                app:strokeColor="@color/black">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="건강 카드"
                    android:textSize="27sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="35dp"
                    android:textAlignment="center"
                    android:background="@drawable/custom_card_background"
                    android:textColor="@color/white"
                    >
                </TextView>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:id="@+id/item_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/boy_test" />


                    <TextView
                        android:id="@+id/cardName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="30dp"
                        android:layout_toEndOf="@+id/item_image"
                        android:layout_toRightOf="@id/item_image"
                        android:text="홍길동"
                        android:textSize="35sp" />

                    <TextView
                        android:id="@+id/cardBirth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardName"
                        android:layout_toEndOf="@+id/item_image"
                        android:layout_toRightOf="@+id/item_image"
                        android:text="생년월일: 0000.00.00"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/cardSex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardBirth"
                        android:layout_toEndOf="@+id/item_image"
                        android:layout_toRightOf="@+id/item_image"
                        android:text="성별: 남"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/cardBlood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardSex"
                        android:layout_toEndOf="@+id/item_image"
                        android:layout_toRightOf="@+id/item_image"
                        android:text="혈액형: B형"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/cardBmi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardBlood"
                        android:layout_toEndOf="@+id/item_image"
                        android:layout_toRightOf="@+id/item_image"
                        android:text="BMI: 정상"
                        android:textSize="20sp"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/secondView"
            android:layout_below="@id/card_view"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="30dp"
            >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/namePage"
            android:text="이름/생년월일"
            android:textSize="25sp"
            >
        </TextView>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/namePage"
            android:id="@+id/getName">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:id="@+id/inputName"
                android:hint="이름을 입력하세요" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/namePage"
            android:layout_toRightOf="@id/getName"
            android:id="@+id/getBirth"
            android:layout_marginStart="20dp">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:id="@+id/inputBirth"
                android:hint="생년월일"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/heightPage"
            android:text="키/체중"
            android:textSize="25sp"
            android:layout_below="@id/getName"
            >
        </TextView>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/heightPage"
            android:id="@+id/getHeight">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:id="@+id/inputHeight"
                android:hint="키를 입력하세요"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/heightPage"
            android:layout_toRightOf="@id/getHeight"
            android:id="@+id/getWeight"
            android:layout_marginStart="20dp">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:id="@+id/inputWeight"
                android:hint="체중을 입력하세요" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/bloodPage"
            android:text="성별/혈액형"
            android:textSize="25sp"
            android:layout_below="@id/getWeight"
            >
        </TextView>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignRight="@id/namePage"
                android:layout_above="@id/getSex"
                android:layout_marginBottom="5dp"
                android:src="@drawable/questionmark"
                ></ImageView>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/bloodPage"
            android:id="@+id/getSex">
            <!--<com.google.android.material.textfield.TextInputEditText
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:id="@+id/inputSex"
                android:hint="성별을 입력하세요" />-->
            <TextView
                android:id="@+id/categoryTextViews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카테고리"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginLeft="16dp"
                app:layout_constraintEnd_toStartOf="@id/categorySpinners"
                app:layout_constraintStart_toStartOf="parent"/>
            <Spinner
                android:entries="@array/성별"
                android:id="@+id/categorySpinners"
                android:layout_width="160dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/categoryTextViews" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/bloodPage"
            android:layout_toRightOf="@id/getSex"
            android:id="@+id/getBlood"
            android:layout_marginStart="20dp">
            <!--<com.google.android.material.textfield.TextInputEditText
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:id="@+id/inputBlood"
                android:hint="혈액형을 입력하세요" />-->
            <TextView
                android:id="@+id/categoryTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카테고리"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginLeft="16dp"
                app:layout_constraintEnd_toStartOf="@id/categorySpinner"
                app:layout_constraintStart_toStartOf="parent"/>
            <Spinner
                android:entries="@array/혈액형"
                android:id="@+id/categorySpinner"
                android:layout_width="160dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/categoryTextView" />
        </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/submit"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/getBlood"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:text="저장" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/submit"
                android:text="저장을 누르면 앱이 자동으로 재시작 돼요!"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textColor="#A4A4A4"
                >

            </TextView>
    </RelativeLayout>


    </RelativeLayout>

    </RelativeLayout>
</ScrollView>
