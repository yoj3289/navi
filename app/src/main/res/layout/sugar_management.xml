                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="홍길동님은 현재 "
                    android:textSize="20sp"
                    >
                </TextView>
                <TextView
                    android:id="@+id/showSugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/showName"
                    android:layout_marginLeft="10dp"
                    android:text="정상 체중 "
                    android:textSize="20sp"
